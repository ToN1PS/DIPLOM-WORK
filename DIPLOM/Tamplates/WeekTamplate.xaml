<?xml version="1.0" encoding="utf-8" ?>
<ControlTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DIPLOM.Tamplates.WeekTamplate">
    <FlexLayout Margin="10,20,20,500" Direction="Row">

        <Frame CornerRadius="20"
               BackgroundColor="Black"
               Padding="11"
               HasShadow="False"
               BorderColor="Transparent">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="1"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="12" Grid.Row="0" Grid.Column="0" FontSize="20" FontAttributes="Bold"/>
                <Label Text="Пн" Grid.Row="1" Grid.Column="0" FontSize="20" FontAttributes="Bold"/>
            </Grid>
        </Frame>
    </FlexLayout>

</ControlTemplate>
